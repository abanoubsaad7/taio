<!DOCTYPE html>
<html lang="en">
    <%- include("partials/head") %> 
<body>
    <%- include("partials/header-admin") %>
    <section id="manage">
        <div >
           <h2>
            This page for Add,Edit,Delete the product
            </h2>
            <a href="manage-users" class="btn btn-lg lonbtn">manage users</a>
        </div>
        <br>
        <div>
            <table class="table table-striped table-hover">
                <thead>
                  <tr>
                    <th scope="col">title</th>
                    <th scope="col">description</th>
                    <th scope="col">price</th>
                    <th scope="col">manage</th>
                  </tr>
                </thead>
                <tbody>
                 <% arrProduct.forEach (item=> { %> 
                  <tr>
                    <td><%= item.proTitle %></td>
                    <td><%= item.proDescription %></td>
                    <td><%= item.proPrice %> Taio</td>
                    <td><a href="deleteProduct/<%= item._id %>" class="btn btn-danger">Delete</a> <a href="update/<%= item._id %>" class="btn btn-success">Update</a></td>
                  </tr>
                 <% }) %> 
                </tbody>
              </table>
        </div>
        <br>
        <div>
            <a href="add-new-pro" class="btn btn-lg lonbtn">Add product</a>
        </div>
    </section>
    <section id="about">
        <center>
            <img src="/img/logo.png" alt="logo" class="logo">
            <h2>
                   اسرة مارجرجس اعدادي
            </h2>
            <h3>
             اسرة بتحبك ومستنياااااااااااااااااااك
            </h3>
        </center>
    </section>
</body>
</html>